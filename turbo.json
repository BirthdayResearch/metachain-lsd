{
  "$schema": "https://turborepo.org/schema.json",
  "pipeline": {
    "write": {
      "cache": false,
      "dependsOn": ["^build"]
    },
    "clean": {
      "cache": false
    },
    "dev": {
      "cache": false
    },
    "docker:pull": {
      "inputs": ["tsconfig.json", "tsconfig.build.json", "src/**"],
      "dependsOn": ["^build"]
    },
    "test:hardhat": {
      "inputs": ["src/**", "tests/**"],
      "dependsOn": ["^build"]
    },
    "test": {
      "inputs": ["src/**", "test/**"],
      "dependsOn": [
        "^build", 
        "docker:pull"
      ]
    },
    "generate": {
      "cache": false,
      "dependsOn": ["^build"]
    },
    "build": {
      "inputs": ["tsconfig.json", "tsconfig.build.json", "src/**"],
      "outputs": ["dist/**", ".next/**"]
    },
    "generate:prisma": {
      "inputs": ["prisma/schema.prisma"],
      "outputs": ["node_modules/@prisma/client"]
    },
    "lint": {
      "outputs": []
    },
    "typecheck": {}
  }
}
